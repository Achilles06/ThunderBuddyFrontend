#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🔍 Running ESLint..."
npm run lint || {
    echo "❌ ESLint failed. Please fix the linting issues before committing."
    exit 1
}

echo "�� Running tests..."
# Suppress specific warnings and run tests
WARN_FILTERS="Warning: An update to .* inside a test was not wrapped in act|DEP0040|watchman warning"
npm run test:ci 2>&1 | grep -vE "$WARN_FILTERS" || {
    echo "❌ Tests failed. Please fix the tests before committing."
    exit 1
}

echo "✅ Pre-commit checks passed!" 